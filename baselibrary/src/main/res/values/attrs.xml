<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="LoadingLayout">
        <attr name="isFirstVisible" format="boolean"></attr>
    </declare-styleable>



    <declare-styleable name="ColorTrackTabViewIndicator">
        <attr name="ctTabSelectedTextColor" format="color"/>
        <attr name="ctTabIndicatorColor" format="color"/>
        <attr name="ctTabTextColor" format="color"/>
        <attr name="ctTabTextSize" format="dimension"/>
        <attr name="ctTabWidth" format="dimension"/>
        <attr name="ctMode">
            <enum name="scrollable" value="0"/>
            <enum name="fixed" value="1"/>
        </attr>

    </declare-styleable>


    <declare-styleable name="ColorTrackView">
        <attr name="ctvText" format="string"/>
        <attr name="ctvText_size" format="dimension"/>
        <attr name="ctvText_origin_color" format="color"/>
        <attr name="ctvText_change_color" format="color"/>
        <attr name="ctvProgress" format="float"/>
        <attr name="ctvDirection" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ColorTrackIndicatorView">
        <attr name="selectedTextColor" format="color"/>
        <attr name="indicatorColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="tabWidth" format="dimension"/>
        <attr name="mode">
            <enum name="scrollable" value="0"/>
            <enum name="fixed" value="1"/>
        </attr>

    </declare-styleable>


    <declare-styleable name="TopBarItem">
        <attr name="backgrounds" format="reference|color" />
        <attr name="titles" format="string" />
        <attr name="leftIcon" format="reference" />
        <attr name="rgihtIcon" format="reference" />
        <attr name="leftText" format="string" />
        <attr name="rightText" format="string" />
         <attr name="leftColor" format="color" />
        <attr name="rightColor" format="color" />
        <attr name="leftSize" format="dimension" />
        <attr name="rightSize" format="dimension" />
    </declare-styleable>


    <declare-styleable name="BannerView">
        <attr name="dotIndicatorSelect" format="color|reference"/>
        <attr name="dotIndicatorNormal" format="color|reference"/>
        <attr name="dotSize" format="dimension"/>
        <attr name="dotDistance" format="dimension"/>
        <attr name="bottomColor"  format="color"/>
        <!-- 定义宽高比 -->
        <attr name="withProportion" format="float"/>
        <attr name="heightProportion" format="float"/>
        <attr name="doGravity" format="enum">
            <enum name="center" value="0"/>
            <enum name="right" value="1"/>
            <enum name="left" value="2"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="ButtonBgUi">
        <attr name="strokeColor" format="color"/>
        <attr name="selectStrokeColor" format="color"/>
        <attr name="pressedColor" format="color"/>
        <attr name="defaultColor" format="color"/>
        <attr name="isRipple" format="boolean"/>
        <attr name="parameter" format="float"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="raoundRadius" format="dimension"/>
        <attr name="topLeftRadius" format="dimension"/>
        <attr name="topRightRadius" format="dimension"/>
        <attr name="bottomLeftRadius" format="dimension"/>
        <attr name="bottomRightRadius" format="dimension"/>

    </declare-styleable>


</resources>